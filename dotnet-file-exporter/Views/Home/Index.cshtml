@model IEnumerable<dotnet_file_exporter.Models.Employee>
@{
    ViewData["Title"] = "Home Page";
    var employees = ViewData["employees"] as IEnumerable<dynamic>;
}

<div>

    <div class="d-flex justify-content-between py-2">
        <h1 class="fs-3">Employee List</h1>
        <div class="d-flex gap-2">
            <a href="/Home/ExportExcel" class="btn btn-success">Export Excel</a>
            <a href="/Home/EmployeePDF" class="btn btn-danger" target="_blank">View PDF</a>
        </div>
    </div>
    <table class="w-100 table table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fullname</th>
                <th scope="col">Position</th>
                <th scope="col">Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <th scope="row">@employee.Id</th>
                    <td>@employee.Fullname</td>
                    <td>@employee.Position</td>
                    <td>@employee.Address</td>
                </tr>
            }

        </tbody>
    </table>
</div>
